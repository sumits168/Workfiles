{
  "displayName": "MissionControl-GKE-Argocd",
  "dashboardFilters": [
    {
      "filterType": "RESOURCE_LABEL",
      "labelKey": "cluster",
      "stringValue": "",
      "templateVariable": "cluster",
      "valueType": "STRING"
    },
    {
      "filterType": "RESOURCE_LABEL",
      "labelKey": "namespace",
      "stringValue": "",
      "templateVariable": "namespace",
      "valueType": "STRING"
    },
    {
      "filterType": "RESOURCE_LABEL",
      "labelKey": "job",
      "stringValue": "",
      "templateVariable": "job",
      "valueType": "STRING"
    },
    {
      "filterType": "METRIC_LABEL",
      "labelKey": "dest_server",
      "stringValue": "",
      "templateVariable": "kubernetes_cluster",
      "valueType": "STRING"
    },
    {
      "filterType": "METRIC_LABEL",
      "labelKey": "project",
      "stringValue": "",
      "templateVariable": "project",
      "valueType": "STRING"
    },
    {
      "filterType": "METRIC_LABEL",
      "labelKey": "name",
      "stringValue": "",
      "templateVariable": "application",
      "valueType": "STRING"
    }
  ],
  "description": "",
  "labels": {
    "cloud-monitoring-dashboard-importer": "",
    "goog-imported-grafana-dashboard": "",
    "goog-imported-grafana-dashboard-from-ui": "",
    "goog-imported-grafana-id": "19974",
    "goog-imported-grafana-revision": "1",
    "goog-imported-via-script": ""
  },
  "mosaicLayout": {
    "columns": 48,
    "tiles": [
      {
        "height": 12,
        "width": 24,
        "widget": {
          "title": "Application Health Status",
          "xyChart": {
            "chartOptions": {
              "displayHorizontal": false,
              "mode": "COLOR"
            },
            "dataSets": [
              {
                "legendTemplate": "${labels.project} - ${labels.health_status}",
                "plotType": "LINE",
                "targetAxis": "Y1",
                "timeSeriesQuery": {
                  "prometheusQuery": "sum(\n  argocd_app_info{\n    cluster=~\"${cluster.value}\",\n    namespace=~'${namespace.value}',\n    job=~'${job.value}',\n    dest_server=~'${kubernetes_cluster.value}',\n    project=~'${project.value}',\n  }\n) by (job, project, health_status)\n"
                }
              }
            ],
            "thresholds": [],
            "yAxis": {
              "scale": "LINEAR"
            }
          }
        }
      },
      {
        "xPos": 24,
        "height": 12,
        "width": 24,
        "widget": {
          "title": "Application Sync Status",
          "xyChart": {
            "chartOptions": {
              "displayHorizontal": false,
              "mode": "COLOR"
            },
            "dataSets": [
              {
                "legendTemplate": "${labels.project} - ${labels.sync_status}",
                "plotType": "LINE",
                "targetAxis": "Y1",
                "timeSeriesQuery": {
                  "prometheusQuery": "sum(\n  argocd_app_info{\n    cluster=~\"${cluster.value}\",\n    namespace=~'${namespace.value}',\n    job=~'${job.value}',\n    dest_server=~'${kubernetes_cluster.value}',\n    project=~'${project.value}',\n  }\n) by (job, project, sync_status)\n"
                }
              }
            ],
            "thresholds": [],
            "yAxis": {
              "scale": "LINEAR"
            }
          }
        }
      },
      {
        "yPos": 12,
        "height": 12,
        "width": 24,
        "widget": {
          "title": "Application Syncs",
          "xyChart": {
            "chartOptions": {
              "displayHorizontal": false,
              "mode": "COLOR"
            },
            "dataSets": [
              {
                "legendTemplate": "${labels.project} - ${labels.phase}",
                "plotType": "LINE",
                "targetAxis": "Y1",
                "timeSeriesQuery": {
                  "prometheusQuery": "sum(\n  round(\n    increase(\n      argocd_app_sync_total{\n        cluster=~\"${cluster.value}\",\n        namespace=~'${namespace.value}',\n        job=~'${job.value}',\n        dest_server=~'${kubernetes_cluster.value}',\n        project=~'${project.value}',\n      }[${__interval}]\n    )\n  )\n) by (job, project, phase)\n"
                }
              }
            ],
            "thresholds": [],
            "yAxis": {
              "scale": "LINEAR"
            }
          }
        }
      },
      {
        "yPos": 12,
        "xPos": 24,
        "height": 12,
        "width": 24,
        "widget": {
          "title": "Application Auto Sync Enabled",
          "xyChart": {
            "chartOptions": {
              "displayHorizontal": false,
              "mode": "COLOR"
            },
            "dataSets": [
              {
                "legendTemplate": "${labels.project} - ${labels.autosync_enabled}",
                "plotType": "LINE",
                "targetAxis": "Y1",
                "timeSeriesQuery": {
                  "prometheusQuery": "sum(\n  argocd_app_info{\n    cluster=~\"${cluster.value}\",\n    namespace=~'${namespace.value}',\n    job=~'${job.value}',\n    dest_server=~'${kubernetes_cluster.value}',\n    project=~'${project.value}',\n  }\n) by (job, project, autosync_enabled)\n"
                }
              }
            ],
            "thresholds": [],
            "yAxis": {
              "scale": "LINEAR"
            }
          }
        }
      },
      {
        "yPos": 24,
        "height": 16,
        "width": 24,
        "widget": {
          "title": "Applications Unhealthy",
          "timeSeriesTable": {
            "columnSettings": [
              {
                "column": "value",
                "visible": true
              }
            ],
            "dataSets": [
              {
                "minAlignmentPeriod": "60s",
                "timeSeriesQuery": {
                  "outputFullDuration": false,
                  "prometheusQuery": "sum(\n  argocd_app_info{\n    cluster=~\"${cluster.value}\",\n    namespace=~'${namespace.value}',\n    job=~'${job.value}',\n    dest_server=~'${kubernetes_cluster.value}',\n    project=~'${project.value}',\n    health_status!~\"Healthy|Progressing\"\n  }\n) by (job, dest_server, project, name, health_status)\n"
                }
              }
            ],
            "metricVisualization": "NUMBER"
          }
        }
      },
      {
        "yPos": 24,
        "xPos": 24,
        "height": 16,
        "width": 24,
        "widget": {
          "title": "Applications Out Of Sync",
          "timeSeriesTable": {
            "columnSettings": [
              {
                "column": "value",
                "visible": true
              }
            ],
            "dataSets": [
              {
                "minAlignmentPeriod": "60s",
                "timeSeriesQuery": {
                  "outputFullDuration": false,
                  "prometheusQuery": "sum(\n  argocd_app_info{\n    cluster=~\"${cluster.value}\",\n    namespace=~'${namespace.value}',\n    job=~'${job.value}',\n    dest_server=~'${kubernetes_cluster.value}',\n    project=~'${project.value}',\n    sync_status!=\"Synced\"\n  }\n) by (job, dest_server, project, name, sync_status) > 0\n"
                }
              }
            ],
            "metricVisualization": "NUMBER"
          }
        }
      },
      {
        "yPos": 40,
        "height": 16,
        "width": 24,
        "widget": {
          "title": "Applications That Failed to Sync[7d]",
          "timeSeriesTable": {
            "columnSettings": [
              {
                "column": "value",
                "visible": true
              }
            ],
            "dataSets": [
              {
                "minAlignmentPeriod": "60s",
                "timeSeriesQuery": {
                  "outputFullDuration": false,
                  "prometheusQuery": "sum(\n  round(\n    increase(\n      argocd_app_sync_total{\n        cluster=~\"${cluster.value}\",\n        namespace=~'${namespace.value}',\n        job=~'${job.value}',\n        dest_server=~'${kubernetes_cluster.value}',\n        project=~'${project.value}',\n        phase!=\"Succeeded\"\n      }[7d]\n    )\n  )\n) by (job, dest_server, project, name, phase) > 0\n"
                }
              }
            ],
            "metricVisualization": "NUMBER"
          }
        }
      },
      {
        "yPos": 40,
        "xPos": 24,
        "height": 16,
        "width": 24,
        "widget": {
          "title": "Applications With Auto Sync Disabled",
          "timeSeriesTable": {
